{%
    set search_vars = {
        'search_control_id': 'projects-related-search',
        'search_popover_help_text_en': ('app.meta.description.fastsearch.projects'|trans({}, "messages")),
        'search_type': 'projects',
        'search_add_link_text': '',
        'search_placeholder_id': 'app.message.search.projects',
        'search_related_main_type': type,
        'search_related_main_id': id,
        'parent': 'related',
    }
%}

<div class="row">
    {% if is_granted('ROLE_TP_LEADER') %}
        <div class="hidden-xs-down col-sm-12 col-lg-4 rbins-search-content">
            {% include '_partials/search/fastSearchFormAndResults.html.twig' with {'search_vars': search_vars} %}
        </div>
    {% endif %}
    <div class="col-xs-12 {% if is_granted('ROLE_TP_LEADER') %}col-lg-8{% endif %} rbins-related-content">
        {{
            render_esi(
                controller(
                    'AppBundle:Projects:renderRelatedProjectsView',
                    {
                        'id': id,
                        'view_controller': view_controller,
                        'view_route': view_route,
                        'edit_controller': edit_controller,
                        'edit_route': edit_route,
                        'type': type,
                    }
                )
            )
        }}
    </div>
</div>
