{% block date_widget %}
    {% spaceless %}
        {% if widget == 'single_text'%}
            {{ parent() }}
            <script>
                $(function() {
                    $( "#{{ id }}" ).datepicker({
                        dateFormat: 'dd/mm/yy'
                    });
                    $( "#{{ id }}" ).datepicker("option", $.datepicker.regional[ "{{app.request.getLocale()}}" ] );
                });
            </script>
        {% else %}
            {{ parent() }}
        {% endif %}
    {% endspaceless %}
{% endblock date_widget %}

{% block choice_widget_collapsed %}
    {% spaceless %}
        {{ parent() }}
        <script>
            $(function() {
                $( "#{{ id }}" ).combobox();
            });
        </script>
    {% endspaceless %}
{% endblock choice_widget_collapsed %}

