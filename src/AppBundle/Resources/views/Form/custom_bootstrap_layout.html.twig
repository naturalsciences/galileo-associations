{% extends 'bootstrap_3_layout.html.twig' %}

{% block form_row %}
    {% spaceless %}
        <div class="row input-prepend {{ rowclass|default('col-xs-12') }}  {% if errors|length > 0 %}with_error{% endif %}">
            <span class="add-on">{{ form_label(form)}}</span>
            {{ form_widget(form) }}
        </div>
    {% endspaceless %}
{% endblock form_row %}


